{
  "manifest_version": 3,
  "name": "Weather by Media Joy",
  "version": "2.0.0",
  "description": "Show relevant weather forecast according to selected hobby made by Media Joy",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "24": "images/icon24.png",
      "32": "images/icon32.png"
    }
  },
  "chrome_url_overrides": {
    "newtab": "popup.html"
  }
}